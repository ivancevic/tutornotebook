{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>Student details</h1>
    <hr>
    <table class="table">
        <tbody>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
	    <tr>
		<th>First Name</th>
		<td>{{ user.fistname }}</td>
	    </tr>
            <tr>
		<th>Last Name</th>
		<td>{{ user.lastname }}</td>
	    </tr>
            <tr>
		<th>Address</th>
		<td>{{ user.address }}</td>
	    </tr>
            <tr>
		<th>Telefon</th>
		<td>{{ user.telefon }}</td>
	    </tr>
            <tr>
		<th>Status</th>
                {% if user.status == true %}
                    <td>Active</td>
                {% else %}
                    <td>Inactive</td>
                {% endif %}
	    </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-primary mb-3" href="{{ path('user_edit', {'id': user.id}) }}"><i class="fas fa-edit"></i> Edit</a>

    {{ include('user/_delete_form.html.twig') }}
    
    <a class="btn btn-outline-info mt-3" href="{{ path('user_index') }}">back to list</a>
{% endblock %}
