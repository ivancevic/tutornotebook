{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h1 class="mt-3">User index</h1>
        </div>
        <div class="col-md-6 d-flex flex-row-reverse">
            <div class="p-2">
               <a class="btn btn-outline-primary mt-3" href="{{ path('user_new') }}"><i class="fas fa-users-cog"></i> Create new</a>
            </div>
        </div>
    </div>
    <hr>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>First name</th>
                <th>Last name</th>
                <th>Address</th>
                <th>Telefon</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            
          
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.fistname }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.address }}</td>
                <td>{{ user.telefon }}</td>
                {% if user.status == true %}
                    <td>active</td>
                {% else %}
                    <td>inactive</td>
                {% endif %}
                <td>
                    <a class="btn btn-outline-primary btn-sm" href="{{ path('user_show', {'id': user.id}) }}"><i class="fas fa-eye"></i> show</a>
                    <a class="btn btn-outline-primary btn-sm" href="{{ path('user_edit', {'id': user.id}) }}"><i class="fas fa-edit"></i> edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
</div>
{% endblock %}
